<div id="welcome">
	<h1 id="welcomeword">Welcome to Chef-O!</h1>
</div>
<br>
<br>
<div class="chefwrap">
	<div class="col-md-offset-1 col-md-4 cheflog ">
		<h2>Are you a Chef?</h2>
		<%= form_for( @chef, url: new_chef_session_path) do |f| %>
		    <div class="field">	    	
		    	<%= f.email_field :email, placeholder: "Email", autofocus: true, :class => "btn btn-default", :id => "chefmail" %>
		    </div>
			<br />
		    <div class="field">
		    	<%= f.password_field :password, placeholder: "Password", autocomplete: "off", :class => "btn btn-default" %><br />
		    </div>
			<br />
		    <div class="actions">
		    	<%= f.submit "Log in", :class => "btn btn-default" %>
		    </div>
		<% end %>
		<h3><%= link_to "Create Account".html_safe, new_chef_registration_path, :id => "button_id", :class => "btn btn-default" %></h3> 
	</div>
</div>
<div class="userwrap">
	<div class="col-md-offset-2 col-md-4 userlog ">
	  	<h2 id="test" >Are you looking for a Chef?</h2>
	  	<%= form_for(@user, url: user_session_path ) do |f| %>
		    <div class="field" >
		    	
		    	<%= f.email_field :email, placeholder: "Email", :class => "btn btn-default" %> <br />
		    </div>
			<br />
		    <div class="field">
		    	
		    	<%= f.password_field :password, placeholder: "Password", :class => "btn btn-default" %> <br />
		    </div>
			<br />
		    <div class="actions">
		    	<%= f.submit "Log in", :class => "btn btn-default" %>
		    </div>
		<% end %>
		<h3><%= link_to "Create Account".html_safe, new_user_registration_path, :id => "button_id", :class => "btn btn-default" %></h3>
	</div>
</div>


